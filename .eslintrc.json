// https://eslint.org/docs/user-guide/configuring
{
  "root": true,
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "globals": {
    // browser specific
    "document": false,
    "window": false,
    "localStorage": false
  },
  // https://www.npmjs.com/package/eslint-config-airbnb
  "extends": "airbnb",
  // custom rules here
  "rules": {
    // allow jsx code inside .js files
    "react/jsx-filename-extension": "off"
  }
}
